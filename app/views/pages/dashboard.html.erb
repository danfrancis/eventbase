<div class="dashboard">
  <div class="accordion span3" id="accordion2">
    <h3>Filter my results by:</h3>
    <div class="accordion-group">
      <%= render partial: 'lists', locals: { filters: @filters } %>
    </div>
    <div class="accordion-group">
      <%= render partial: 'events', locals: { filters: @filters } %>
    </div>
    <div class="accordion-group">
      <%= render partial: 'sectors', locals: { filters: @filters } %>
    </div>
    <div class="accordion-group">
      <%= render partial: 'locations', locals: { filters: @filters } %>
    </div>
    <%= link_to 'Reset my filters', remove_all_filters_url, confirm: 'Are you sure you want to clear all your filters?', method: :delete %>
  </div>
  <div class="dashboard-results span8">
    <div id="calendar"></div>
  </div>
</div>

<script>

  var lists = [
  <% @lists.each do |list| %>
    '<%= j(list.name) %>'
    <% if list != @lists.last %>,<% end %>
  <% end %>
  ];
  
  var sectors = [
  <% @sectors.each do |sector| %>
    '<%= j(sector.name) %>'
    <% if sector != @sectors.last %>,<% end %>
  <% end %>
  ];

  var events = [
  <% @filtered_events.each do |event| %>
    <% if event.event_start_date && event.event_end_date %>
      {
        id: <%= event.id %>,
        title: '<%= j(event.name) %> (<%#= event.companies.length %>)'.replace('&amp;', '&'),
        start: new Date(<%= event.start_year %>, <%= event.start_month %>, <%= event.start_day %>),
        end: new Date(<%= event.end_year %>, <%= event.end_month %>, <%= event.end_day %>),
        categories: '<%#= event.sector_names %>',
        show: true
      }
    <% if event != @filtered_events.length %>,<% end %>
    <% end %>
  <% end %>
  ];
  var events_list = [
  <% @events.each do |event| %>
    '<%= j(event.name) %>'
    <% if event != @events.last %>,<% end %>
  <% end %>
  ];
  
  var arr = [];
  
  var locations = [
  <% @locations.each do |location| %>
    '<%= j(location) %>'
    <% if location != @locations.last %>,<% end %>
  <% end %>
  ];
  
  var Filter = {
    init: function(){
      filters = this.getCurrentFilters();
      console.log(filters);
    },
    getCurrentFilters: function(){
      if (sessionStorage.getItem('filters') != null){
        return sessionStorage.getItem('filters');
      }
      else {
        return []
      }
    },
    addFilter: function(id, title, type){
      var filter = {
        id: id,
        title: title,
        type: type
      };
      filters.push(filter);
      sessionStorage.setItem('filters', filters);
    },
    resetAllFilters: function(){
      sessionStorage.removeItem('filters')
    } 
  };

  $(function(){
    
    $("#lists").typeahead({ source: lists });
    $("#events").typeahead({ source: events_list });
    $("#sectors").typeahead({ source: sectors });
    $("#locations").typeahead({ source: locations });
    
    $('#calendar').fullCalendar({
        // your options here
        header: {
  				left: 'prev,next today',
  				center: 'title',
  				right: 'month,basicWeek,basicDay'
  			},
        defaultView: 'basicWeek',
        events: events,
        eventClick: function(calEvent, jsEvent, view) {
          window.location.replace('<%= root_url %>events/'+calEvent.id);
        },
        dayClick: function(date, allDay, jsEvent, view){
          $('#calendar').fullCalendar('changeView', 'basicDay');
          $('#calendar').fullCalendar('gotoDate', date);
        },
        limitEvents: 5
    });
    
    $('.category_filter').click(function(){
      var category = $(this).attr('id');
      arr = [];
      for(var i=0; i < events.length; i++){
        if(events[i]['categories'].indexOf(category) == -1){
          arr.push(events[i]['id']);
        }
      }
      for(var i=0; i < arr.length; i++){
        $('#calendar').fullCalendar( 'removeEvents', arr[i]);
      }
      $('#calendar').fullCalendar( 'removeEventSource', events );
      $('#calendar').fullCalendar( 'addEventSource', arr );
    });
    
    
    //fc-today
  });


</script>