<h1>Listing filters</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Filterable type</th>
    <th>Filterable</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @filters.each do |filter| %>
  <tr>
    <td><%= filter.title %></td>
    <td><%= filter.filterable_type %></td>
    <td><%= filter.filterable_id %></td>
    <td><%= filter.user_id %></td>
    <td><%= link_to 'Show', filter %></td>
    <td><%= link_to 'Edit', edit_filter_path(filter) %></td>
    <td><%= link_to 'Destroy', filter, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

