<div id="content" class="span11">
  <div class="row-fluid sortable ui-sortable">		
		<div class="box span12">
			<div class="box-header" data-original-title="">
				<h2><i class="halflings-icon align-justify"></i><span class="break"></span>Sector</h2>
			</div>
  		<div class="box-content" style="display: block;">
        <h1><%= @sector.name %></h1>
        <h3>Events</h3>
  			<div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
  			  <table id="attending_table" class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
            <thead>
              <tr>
                <th>Event Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Location</th>
                <th>Role</th>
                <th>Add to...</th>
              </tr>
            </thead>
            <tbody>
            <% @sector.events.each do |event| %>
              <tr>
                <td><%= link_to event.name, event %></td>
                <td><%= event.event_start_date.strftime('%D') %></td>
                <td><%= event.event_end_date.strftime('%D') %></td>
                <td><%= event.venue.location.name %></td>
                <td><%= event.attendances.length %></td>
                <td><%= render partial: 'trackers/form', locals: { :tracking_item => event, :lists => @lists_event } %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
		    </div>
		    <h3>Companies</h3>
		    <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
          <table id="companies" class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
            <thead>
              <tr>
                <th>Company Name</th>
                <th>Add to...</th>
              </tr>
            </thead>
            <tbody>
          <% @sector.companies.each do |company| %>
              <tr>
                <td><%= link_to company.name, company %></td>
                <td><%= render partial: 'trackers/form', locals: { :tracking_item => attendance.attending, :lists => @lists_company } %></td>
              </tr>
          <% end %>
            </tbody>
          </table>
		    </div>
  		</div><!--/span-->
		</div>
  </div>
</div>

<script>

  $(function(){
    $('#attendees_table').dataTable();
    $('#companies').dataTable();
  });

</script>


