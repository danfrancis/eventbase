<p id="notice"><%= notice %></p>

<h1>
  <%= link_to @event.name, "http://#{@event.url}" %>
</h1>

<%= render partial: 'trackers/form', locals: { :tracking_item => @event, lists: @lists } %>
<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
  <b>Organizer:</b>
  <%= @event.organizer %>
</p>

<p>
  <b>Venue:</b>
  <%= link_to @event.venue.name, @event.venue %>
</p>

<p>
  <b>Event start date:</b>
  <%= @event.event_start_date %>
</p>

<p>
  <b>Event end date:</b>
  <%= @event.event_end_date %>
</p>

<p>
  <b>People Attending: </b>
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Company Name</th>
    </tr>
    <tbody>
  <% @attendances.each do |attendance| %>
      <tr>
        <td><%= link_to attendance.attending.name, attendance.attending %></td>
        <td><%= attendance.role %></td>
        <td>
          <% if attendance.attending_type == 'Person' %>
            <%= link_to attendance.attending.company.name, attendance.attending.company %>
          <% end %>
        </td>  
      </tr>
  <% end %>
    </tbody>
  </table>
</p>