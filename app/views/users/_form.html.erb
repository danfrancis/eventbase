<%= form_for(User.new, html: { class: 'form-horizontal'}) do |f| %>
  <fieldset>  
  <% if User.new.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(User.new.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% User.new.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="input-prepend" title="Username">
		<span class="add-on"><i class="halflings-icon user"></i></span>
		<%= f.text_field :first_name, placeholder: 'First Name', class: "input-large span10" %>
	</div>
	
	<div class="input-prepend" title="Username">
		<span class="add-on"><i class="halflings-icon user"></i></span>
		<%= f.text_field :last_name, placeholder: 'Last Name', class: "input-large span10" %>
	</div>
	
	<div class="input-prepend" title="Username">
		<span class="add-on"><i class="halflings-icon user"></i></span>
		<%= f.email_field :email, placeholder: 'Email', class: "input-large span10" %>
	</div>
	
	<div class="input-prepend" title="Username">
		<span class="add-on"><i class="halflings-icon user"></i></span>
		<%= f.password_field :password, placeholder: 'Password', class: "input-large span10" %>
	</div>
	
	<div class="input-prepend" title="Username">
		<span class="add-on"><i class="halflings-icon user"></i></span>
		<%= f.password_field :password_confirmation, placeholder: 'Password confirmation', class: "input-large span10" %>
	</div>

	<p><%= check_box_tag :terms %><span> I agree to terms</span></p>
  <div class="button-login">
	  <%= f.submit 'Create Account', class: 'btn btn-primary', id: 'create_account' %>
	</div>
	<div class="clearfix"></div>
<% end %>

<script>

  $(function(){
    
    $('#new_user').submit(function(){
      if ($('#terms:checked').length){
        return true;
      }
      else {
        return false;
      }
    });
  });

</script>
