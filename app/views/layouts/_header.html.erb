<div class="header span12">
  <div class="logo">
    <h1><%= link_to 'EventBase', root_url %></h1>
  </div>
  <div class="header-nav">
    <% if true %>
      <ul class="nav-signed-in">
        <li>
          <div class="btn-group">
            <a class="btn" href="/dashboard">Dashboard</a>
          </div>
        </li>
        <li>
          <div class="btn-group">
            <a class="btn" href="#">Settings</a>
          </div>
        </li>
        <li>
          <div class="btn-group">
            <a class="btn" href="#">Sign out</a>
          </div>
        </li>
      </ul>
    <% else %>
      <ul class="nav-signed-out">
        <li>
          <div class="btn-group">
            <a class="btn" href="#">Pricing</a>
          </div>
        </li>
        <li>
          <div class="btn-group">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              Sign In
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= text_field_tag :email, nil, placeholder: 'Email' %></li>
              <li><%= text_field_tag :password, nil, placeholder: 'Password' %></li>
              <li><%= submit_tag 'Sign In', class: 'btn-primary' %></li>
            </ul>
          </div>
        </li>
        <li>
          <div class="btn-group">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              Sign Up
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <%= render 'users/form' %>
            </ul>
          </div>
        </li>
      </ul>
    <% end %>
  </div>
</div>