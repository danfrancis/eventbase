<script>

  function autocomplete(){
    $.get('/autocomplete', null, function(data){
          
          var autocomplete = new Array();
      
          for (var key in data){
            data[key].forEach(function(d) {
              if (key == 'companies'){
                var cat = 'Company';
              }
              else if (key == 'events'){
                var cat = 'Event';
              }
              else if (key == 'sectors'){
                var cat = 'Sector';
              }
              else {
                var cat = 'List';
              }
              autocomplete.push({ category: cat, label: d.name, url: key + '/' + d.id });
            });
          }
    
          $("#search").catcomplete({ 
            source: autocomplete,
            select: function(event, ui){
              window.location.replace('<%= j(root_url) %>' + ui.item['url']);
            }
          });
        }, 'json');
  }

  $(function(){
    
    $('#search_form').submit(function(){
      return false;
    });
    
    $.widget( "custom.catcomplete", $.ui.autocomplete, {
        _renderMenu: function( ul, items ) {
            var that = this,
                currentCategory = "";
            $.each( items, function( index, item ) {
                if ( item.category != currentCategory ) {
                    ul.append( "<li class='ui-autocomplete-category'>" + item.category + "</li>" );
                    currentCategory = item.category;
                }
                that._renderItemData( ul, item );
            });
        }
    });
    
    if ('<%= action_name %>' != 'dashboard'){
      autocomplete();
    }
        
    $('#sign_in').on('click', function(){
      setTimeout('$("#email").focus()', 300);
    });
    
    $('#sign_up').on('click', function(){
      setTimeout('$("#user_first_name").focus()', 300);
    });
    
  });

</script>